# Path to your oh-my-zsh configuration.
ZSH=$HOME/Dropbox/Dev/Tools/dotfiles/zsh/oh-my-zsh

# Set name of the theme to load.
# Look in ~/.oh-my-zsh/themes/
# Optionally, if you set this to "random", it'll load a random theme each
# time that oh-my-zsh is loaded.
export ZSH_THEME="mortalscumbagmod"

# Set to this to use case-sensitive completion
# CASE_SENSITIVE="true"

# Comment this out to disable weekly auto-update checks
DISABLE_AUTO_UPDATE="true"

# Uncomment following line if you want to disable colors in ls
# DISABLE_LS_COLORS="true"

# Uncomment following line if you want to disable autosetting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment following line if you want disable red dots displayed while waiting for completion
# DISABLE_COMPLETION_WAITING_DOTS="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(brew docker gem git knife node npm osx ruby rvm vagrant web-search wd)

source $ZSH/oh-my-zsh.sh

# Customize to your needs...
# Load Java home
export JAVA_HOME=/Library/Java/JavaVirtualMachines/jdk1.7.0_25.jdk/Contents/Home

# PATH
export PATH="/usr/local/bin:/usr/local/sbin:~/bin:$PATH"

# NPM 
export PATH=$PATH:/usr/local/share/npm/bin

# Go-lang
export PATH=$PATH:/usr/local/go/bin

# Haskell
export PATH="$HOME/Library/Haskell/bin:$PATH"

# Load RVM function
[[ -s "$HOME/.rvm/scripts/rvm" ]] && . "$HOME/.rvm/scripts/rvm" 

# Add RVM to PATH for scripting
PATH=$PATH:$HOME/.rvm/bin

# alias commands
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias c='clear'
alias la='ls -a'
alias ll='ls -al'
alias ga.='git add . -A'
alias vimrc='vim ~/Dropbox/Dev/Tools/dotfiles/vim/vimrc'
alias zshrc='vim ~/Dropbox/Dev/Tools/dotfiles/zsh/zshrc'
alias ec2ls='aws ec2 describe-instances'
alias sshls='cat ~/.ssh/config'
alias sshcfg='vim ~/.ssh/config'
alias updates='brew update && brew upgrade && rvm get stable && gem update --no-rdoc --no-ri && npm -g update'
alias untar='for a in `ls -1 *.tar.gz`; do tar -zxvf $a; done'
alias grblflash='/Applications/Arduino.app/Contents/Resources/Java/hardware/tools/avr/bin/avrdude -C/Applications/Arduino.app/Contents/Resources/Java/hardware/tools/avr/etc/avrdude.conf -pm328p -carduino -P/dev/tty.usbmodemfd1341 -D -Uflash:w:/Users/Lance/Downloads/grbl.hex'

# marks for directory navigation
export MARKPATH=$HOME/.marks

function jump { 
    cd -P "$MARKPATH/$1" 2>/dev/null || echo "No such mark: $1"
}
function mark { 
    mkdir -p "$MARKPATH"; ln -s "$(pwd)" "$MARKPATH/$1"
}
function unmark { 
    rm -if "$MARKPATH/$1"
}
function marks {
    \ls -l "$MARKPATH" | tail -n +2 | sed 's/  / /g' | cut -d' ' -f9- | awk -F ' -> ' '{printf "%-10s -> %s\n", $1, $2}'
}
function _completemarks {
    reply=($(ls $MARKPATH))
}

compctl -K _completemarks jump
compctl -K _completemarks unmark

# zsh
#
# Autocomplete
autoload -Uz compinit && compinit

# Vim mode zsh
bindkey -v
bindkey -M viins 'jj' vi-cmd-mode

function zle-line-init zle-keymap-select {
    RPS1="${${KEYMAP/vicmd/-- NORMAL --}/(main|viins)/-- INSERT --}"
    RPS2=$RPS1
    zle reset-prompt
}
zle -N zle-line-init
zle -N zle-keymap-select
